datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Service 
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  shortDesc   String
  longDesc    String
  imageUrl    String?
  videoUrl    String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isFeatured  Boolean  @default(false)
}

model Update {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
  published Boolean  @default(true)
}

model ContactSubmission {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  company     String?
  role        String?
  requirement String
  budget      String?
  createdAt   DateTime @default(now())
}
